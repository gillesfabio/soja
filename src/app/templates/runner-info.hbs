<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title">Information</h3>
	</div>
	<div class="panel-body">
		<ul class="list-unstyled">
			<li><i class="icon-time"></i> <strong>Last run:</strong> {{#if lastRunDate}}{{lastRunDate}}{{else}}never{{/if}}</li>
			<li class="{{#if connected}}list-item-ok{{else}}list-item-failure{{/if}}">
				<i class="{{#if connected}}icon-thumbs-up-alt{{else}}icon-thumbs-down-alt{{/if}}"></i>
				<strong>Server:</strong> {{#if connected}}connected{{else}}not connected{{/if}}
			</li>
		</ul>
	</div>
</div>
